{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{member.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details" style="overflow:scroll; width:400px; height:400px;">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Aluno</div>
                <div>{{member.name}}</div>
            </div>

             <div class="item">
                <div>E-mail</div>
                <div>{{member.email}}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{member.birth}}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ "Masculino" if member.gender == "M" else "Feminino" }}</div>
            </div>

            <div class="item">
                <div>Tipo Sanguíneo</div>
                <div>{{member.blood}}</div>
            </div>

            <div class="item">
                <div>Endereço</div>
                <div>{{member.address}}</div>
            </div>

            <div class="item">
                <div>Telefone</div>
                <div>{{member.phone}}</div>
            </div>

            <div class="item">
                <div>RG</div>
                <div>{{member.rg}}</div>
            </div>

            <div class="item">
                <div>CPF</div>
                <div>{{member.cpf}}</div>
            </div>


            <a href="/members/{{member.id}}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock content %}